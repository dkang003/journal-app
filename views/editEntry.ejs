<div class="edit edit-entry-background">
  <div class="col-sm-6 offset-md-3">
    <h1>Edit Entry</h1>
    <form method="post" action="/entries/<%= _id %>?_method=PATCH">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="<%= moment(date).format('YYYY-MM-DD') %>">
        </div>
      <div class="form-group">
        <label for="title">Title</label>
        <input type="title" class="form-control" id="title" name="title" value="<%= title %>">
      </div>
      <div class="form-group">
        <label style="display:block" for="body">Body</label>
        <textarea name="body" id="body" cols="80" rows="10"><%= body %></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update This Entry</button>
    </form>
    <form style="margin-top: 10px;" method="post" action="/entries/<%= _id %>?_method=DELETE">
        <button type="submit" class="btn btn-danger">Delete This Entry!</button>
    </form>
    <hr>
    <p>Or, <a href="/users/profile">Back to Profile</a></p>
  </div>
</div>